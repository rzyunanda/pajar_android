<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Insting.InstingDetailActivity"    >

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/card_detail_insting_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="20dp"
            android:id="@+id/insting_detail_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/card_detail_insting_1"
        android:id="@+id/card_detail_insting_2"
        android:layout_width="match_parent"
        android:layout_height="200dp">

       <VideoView
           android:id="@+id/insting_videoview"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/card_detail_insting_3"
        android:layout_width="match_parent"
        android:layout_below="@id/card_detail_insting_2"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:padding="10dp"
            android:id="@+id/detail_materi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"/>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>